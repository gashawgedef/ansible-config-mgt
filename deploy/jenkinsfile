pipeline {
    agent any
    stages {
        stage('Checkout SCM') {
            steps {
                // Use a single Git checkout step with credentials
                git branch: 'main', 
                    credentialsId: 'gashity_token', 
                    url: 'https://github.com/gashawgedef/ansible-config-mgt.git'
            }
        }

        stage('Test SSH Connection') {
            steps {
                sshagent(['private-key']) {
                    sh '''
                    ssh -o StrictHostKeyChecking=no -i /home/ubuntu/.ssh/gashaw_key.pem ubuntu@172.31.22.35 exit
                    '''
                }
            }
        }
        stage('Validate Ansible Configuration') {
    steps {
        sh '''
        echo "Validating ansible.cfg content:"
        cat $WORKSPACE/deploy/ansible.cfg
        '''
    }
}


        // stage('Run Ansible playbook') {
